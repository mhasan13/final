<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Seasons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.seasons %></td>
        <td><%= link_to 'Show', player , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_player_path(player) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path , class:"btn btn-xs btn-danger" %>
